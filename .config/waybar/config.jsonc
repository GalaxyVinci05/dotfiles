            "default": "<span>"
        }
    },
    "hyprland/window": {
	    "max-length": 32
    },
    "wlr/taskbar": {
    	"format": "{icon}",
    	"icon-size": 14,
    	"icon-theme": "candy-icons",
    	"tooltip-format": "{title}",
    	"on-click": "activate",
    	"on-click-middle": "close",
    	"ignore-list": [
            "Alacritty"
    	],
    	"app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
